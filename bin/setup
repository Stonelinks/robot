#!/bin/bash
set -ex

if [ ! -f $PROJECT_ROOT/bin/arduino-cli ]; then
    curl -fsSL https://raw.githubusercontent.com/arduino/arduino-cli/master/install.sh | BINDIR=$PROJECT_ROOT/bin sh
fi

arduino-cli core update-index

arduino-cli core install esp8266:esp8266
arduino-cli core install esp32:esp32

sudo python2 -m pip install pyserial

arduino-cli lib install "OneButton"
arduino-cli lib install "Adafruit Unified Sensor"
arduino-cli lib install "ESP8266 and ESP32 Oled Driver for SSD1306 display"

if [ ! -d $PROJECT_ROOT/3rdparty ]; then
    mkdir -p $PROJECT_ROOT/3rdparty
fi

if [ ! -d $PROJECT_ROOT/3rdparty ]; then
    mkdir -p $PROJECT_ROOT/3rdparty
fi

RTSP_COMMIT_SHA="c0b1a1cc5d2465ac77b8caf0ba3c522b0607880f"
if [ ! -d $PROJECT_ROOT/3rdparty/Micro-RTSP ]; then
    mkdir -p $PROJECT_ROOT/3rdparty/Micro-RTSP
    cd $PROJECT_ROOT/3rdparty/Micro-RTSP
    wget https://github.com/geeksville/Micro-RTSP/archive/$RTSP_COMMIT_SHA.zip
    unzip $RTSP_COMMIT_SHA.zip
    cp -r Micro-RTSP-$RTSP_COMMIT_SHA/src/* .
    rm -rf $RTSP_COMMIT_SHA.zip Micro-RTSP-$RTSP_COMMIT_SHA 
fi